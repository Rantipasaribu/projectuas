<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#D2D2AE">

    <ImageView
        android:id="@+id/profile_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Profil"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/halo_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_user"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Halo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_user"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="Selamat Datang di OGI!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <!-- Judul dan Teks -->
    <TextView
        android:id="@+id/txt_judul_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_user"
        android:layout_marginTop="106dp"
        android:text="OpenGov Indonesia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_detail_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_judul_user"
        android:layout_marginTop="8dp"
        android:text="Aplikasi OpenGov Indonesia diarahkan untuk menjadi alat efektif dalam menangani penanganan penduduk miskin. Fitur yang membatasi akses pengguna umum hanya melihat berita dan grafik, sementara admin memiliki kontrol penuh untuk menambahkan berita, menambahkan grafik penduduk miskin, dan menerima pengajuan, dirancang untuk memastikan keamanan dan keakuratan informasi yang disajikan kepada masyarakat. "
        android:textSize="16sp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        app:itemIconSize="30dp"
        app:menu="@menu/menu" />

</RelativeLayout>
